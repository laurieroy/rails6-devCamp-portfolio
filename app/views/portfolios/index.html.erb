<h1>Portfolio Items (<%= @portfolio_items.count %>)</h1>

<% link_to "Create New Item", new_portfolio_path %>

<% @portfolio_items.each do |p| %>
  <p><%=link_to p.title, portfolio_path(p) %></p>
  <p><%= p.subtitle %></p>
  <p><%= p.body %></p>
  <%= image_tag p.thumb_image if p.thumb_image %>
  <%= link_to "Edit", edit_portfolio_path(p) %>
  <%= link_to "Delete", p, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end%>